<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CreateActivity">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="8dp"
        android:text="Back"
        android:textColor="#333333"
        android:textSize="17sp"
        app:drawableStartCompat="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableStart="@drawable/baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Create Your Account"
        android:textAlignment="center"
        android:textColor="#EB364A"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Become a TelKafÃ©r to skip the line and pre-order your meals."
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext_outline"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="50dp"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext_outline"
        android:hint="Username"
        android:inputType="textPersonName"
        android:minHeight="50dp"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext_outline"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="50dp"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etUsername" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_edittext_outline"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:minHeight="50dp"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:buttonTint="#000000"
        android:text="I agree to the "
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword" />

    <TextView
        android:id="@+id/tvTermsLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Service"
        android:textColor="#EB364A"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/cbTerms"
        app:layout_constraintStart_toEndOf="@id/cbTerms" />

    <TextView
        android:id="@+id/tvAndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" and "
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/cbTerms"
        app:layout_constraintStart_toEndOf="@id/tvTermsLink" />

    <TextView
        android:id="@+id/tvPrivacyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textColor="#EB364A"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/cbTerms"
        app:layout_constraintStart_toEndOf="@id/tvAndText" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#EB364A"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="14dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrivacyLink" />

    <TextView
        android:id="@+id/tvAlreadyHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Already have an account? "
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvLoginLink"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateAccount" />

    <TextView
        android:id="@+id/tvLoginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="Log In"
        android:textColor="#EB364A"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvAlreadyHave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAlreadyHave" />

</androidx.constraintlayout.widget.ConstraintLayout>